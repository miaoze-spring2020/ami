{
    "variables": {
        "aws_access_key": "",
        "aws_secret_key": "",
        "aws_region": "",
        "subnet_id": "",
        "source_ami": "ami-07ebfd5b3428b6f4d",
        "ssh_username": "ubuntu"
    },
    "builders": [
        {
            "type": "amazon-ebs",
            "access_key": "{{user `aws_access_key`}}",
            "secret_key": "{{user `aws_secret_key`}}",
            "region": "{{user `aws_region`}}",
            "instance_type": "t2.micro",
            "subnet_id": "{{user `subnet_id`}}",
            "source_ami": "{{user `source_ami`}}",
            "ssh_username": "{{user `ssh_username`}}",
            "ami_name": "csye6225_{{timestamp}}",
            "ami_users": "{{user `aws_users`}}",
            "ami_description": "Ubuntu AMI for CSYE 6225 - Spring 2020",
            "launch_block_device_mappings": [
                {
                    "device_name": "/dev/sda1",
                    "volume_size": 8,
                    "volume_type": "gp2",
                    "delete_on_termination": true
                }
            ]
        }
    ],
    "provisioners": [ 
        {
            "type": "shell",
            "inline": [
                "sudo apt-get update",
                "sudo apt-get install -y default-jdk",
                "sudo apt-get install -y tomcat9",
                "sudo apt-get install -y maven",
                "sudo apt-get install -y ruby",
                "sudo apt-get install wget",
                "wget https://aws-codedeploy-{{user `aws_region`}}.s3.{{user `aws_region`}}.amazonaws.com/latest/install",
                "chmod +x ./install",
                "sudo ./install auto",
                "wget https://s3.amazonaws.com/amazoncloudwatch-agent/ubuntu/amd64/latest/amazon-cloudwatch-agent.deb",
                "sudo dpkg -i -E ./amazon-cloudwatch-agent.deb",
                "touch /lib/systemd/system/awslogs.service",
                "echo '[Unit]' >> /lib/systemd/system/awslogs.service",
                "echo 'Description=Cloud Watch Service' >> /lib/systemd/system/awslogs.service",
                "echo 'After=rc-local.service' >> /lib/systemd/system/awslogs.service",
                "echo '' >> /lib/systemd/system/awslogs.service",
                "echo '[Service]' >> /lib/systemd/system/awslogs.service",
                "echo 'Type=simple' >> /lib/systemd/system/awslogs.service",
                "echo 'Restart=always' >> /lib/systemd/system/awslogs.service",
                "echo 'KillMode=process' >> /lib/systemd/system/awslogs.service",
                "echo 'TimeoutSec=infinity' >> /lib/systemd/system/awslogs.service",
                "echo 'PIDFile=/var/awslogs/state/awslog.pid' > /lib/systemd/system/awslogs.service",
                "echo 'ExecStart=/var/waslogs/bin/awslogs-agent-launcher.sh --start --background --pidfile $PIDFILE --user awslogs --chuid awslogs &' > /lib/systemd/system/awslogs.service",
                "echo '' > /lib/systemd/system/awslogs.service",
                "echo '[Install]' > /lib/systemd/system/awslogs.service",
                "echo 'WantedBy=multi-user.target' > /lib/systemd/system/awslogs.service",
                "sudo systemctl daemon-reload",
                "sudo systemctl enable awslogs.service"
            ]
        }
    ]
}